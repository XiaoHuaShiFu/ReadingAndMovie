.container {
    display: flex;
    flex-direction: column;
}

.head-image {
    width: 100%;
    height: 460rpx;
}

.audio{
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    opacity: 0.6;
}

.author-date {
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.avatar {
    border-radius: 50%;
    overflow: hidden;
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
}

.author {
    color: #666;
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    vertical-align: middle;
}

.const-text {
    color: #999;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.date {
    color: #999;
    font-size: 24rpx;
    margin-left: 30rpx;
    vertical-align: middle;
}

.title {
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    margin-left: 40rpx;
    color: #4b556c;
}

.tool {
    margin-top: 20rpx;
}

.circle-img {
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}

.circle-img Image {
    width: 90rpx;
    height: 90rpx;
}

.share-img {
    margin-left: 30rpx;
}

.horizon {
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 42rpx;
    margin: 0 auto;
    z-index: -99;
}

.detail {
    color: #666;
    margin: 20rpx 30rpx 0 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
}