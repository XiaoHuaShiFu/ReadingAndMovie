.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

page{
   background-color: #b3d4db;
   height: 100%;
}

.user-avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 160rpx;
    overflow:hidden;
}

.user-name{
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 100rpx;
}

.moto-container{
    width:200rpx;
    height: 80rpx;
    border: 2rpx solid #405f80;
    margin-top: 250rpx;
    border-radius: 10rpx;
    text-align: center;
}

.moto{
    line-height: 80rpx;
    font-size: 22rpx;
    font-weight: bold;
    color: #405f80;
}
